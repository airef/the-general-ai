float max(float a = 0.0, float b = 2.0) {
    if(a > b)
        return (a);
    return (b);

    // the return value must always be inside parantheses.
}

float min(float a = 0.0, float b = 2.0) {
    if(a < b)
        return (a);
    return (b);

    // the return value must always be inside parantheses.
}