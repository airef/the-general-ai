		(defrule
		(goal g-attack-objective ATTACK-TARGET-ENEMY)
		(current-age >= castle-age)
		=>
		(up-modify-goal g-temp g:= g-enemy-heavy-cavalry-count)
		(up-modify-goal g-temp-2 g:= g-enemy-elephants-count)
		(up-modify-goal g-temp g:+ g-temp-2)
		(up-modify-goal g-temp c:/ 3)
		(up-modify-goal g-required-attack-num g:+ g-temp)
		(up-modify-goal g-temp g:= g-enemy-skirmishers-count)
		; (up-modify-goal g-temp-2 g:= g-enemy-spearmen-count)
		; (up-modify-goal g-temp g:+ g-temp-2)
		(up-modify-goal g-temp c:/ 3)
		(up-modify-goal g-required-attack-num g:- g-temp)
		; (up-chat-data-to-all "Required7 %d" g: g-required-attack-num)
		)

		;Adjust required attacking number if top enemy has more military than us
		(defrule
		(goal g-attack-objective ATTACK-TARGET-ENEMY)
		(current-age >= castle-age)
		(up-compare-goal g-top-enemy-military-parity < 0)	;negative parity means we're outnumbered
		; (military-population > 20)
		=>
		(up-modify-goal g-temp g:= g-top-enemy-military-parity)
		(up-modify-goal g-temp c:/ -2)
		(up-modify-goal g-required-attack-num g:+ g-temp)
		; (up-chat-data-to-all "Required8 %d" g: g-required-attack-num)
		)

		;Adjust required attacking number if partner is under attack
		(defrule
		(goal g-attack-objective ATTACK-TARGET-ENEMY)
		(current-age >= imperial-age)
		(up-compare-goal g-team-partner-identity == THE-GENERAL)
